{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "faq.schema.json",
    "title": "FAQ",
    "type": "object",
    "properties": {
        "faq": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "voice": {
                    "$ref": "voice.schema.json#/$defs/Voice"
                },
                "domain": {
                    "type": "string",
                    "format": "uri-reference"
                },
                "path": {
                    "type": "string"
                },
                "cookies": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "scenes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/SceneItem"
                    }
                }
            },
            "required": [
                "id",
                "voice",
                "domain",
                "path",
                "cookies",
                "scenes"
            ]
        }
    },
    "required": [
        "faq"
    ],
    "$defs": {
        "Say": {
            "type": "object",
            "properties": {
                "say": {
                    "type": "string"
                }
            },
            "required": [
                "say"
            ],
            "additionalProperties": false
        },
        "Fill": {
            "type": "object",
            "properties": {
                "fill": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "input": {
                                "type": "string"
                            },
                            "value": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "input",
                            "value"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "required": [
                "fill"
            ],
            "additionalProperties": false
        },
        "Click": {
            "type": "object",
            "properties": {
                "click": {
                    "type": "string"
                }
            },
            "required": [
                "click"
            ],
            "additionalProperties": false
        },
        "Select": {
            "type": "object",
            "properties": {
                "select": {
                    "type": "object",
                    "properties": {
                        "input": {
                            "type": "string"
                        },
                        "value": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "input",
                        "value"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "select"
            ],
            "additionalProperties": false
        },
        "SceneItem": {
            "type": "object",
            "properties": {
                "scene": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/$defs/Say"
                            },
                            {
                                "$ref": "#/$defs/Fill"
                            },
                            {
                                "$ref": "#/$defs/Click"
                            },
                            {
                                "$ref": "#/$defs/Select"
                            }
                        ]
                    }
                }
            },
            "required": [
                "scene"
            ],
            "additionalProperties": false
        }
    }
}