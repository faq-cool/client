{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "faq.schema.json",
    "title": "FAQ",
    "type": "object",
    "properties": {
        "faq": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "voice": {
                    "$ref": "voice.schema.json#/$defs/Voice"
                },
                "domain": {
                    "type": "string",
                    "format": "uri-reference"
                },
                "path": {
                    "type": "string"
                },
                "cookies": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "scenes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/SceneItem"
                    }
                }
            },
            "required": [
                "id",
                "voice",
                "domain",
                "path",
                "cookies",
                "scenes"
            ]
        }
    },
    "required": [
        "faq"
    ],
    "$defs": {
        "Say": {
            "type": "object",
            "properties": {
                "say": {
                    "type": "string"
                }
            },
            "required": [
                "say"
            ],
            "additionalProperties": false
        },
        "Click": {
            "type": "object",
            "properties": {
                "click": {
                    "type": "string"
                }
            },
            "required": [
                "click"
            ],
            "additionalProperties": false
        },
        "Highlight": {
            "type": "object",
            "properties": {
                "highlight": {
                    "type": "string"
                }
            },
            "required": [
                "highlight"
            ],
            "additionalProperties": false
        },
        "KeyValue": {
            "type": "object",
            "minProperties": 1,
            "maxProperties": 1,
            "additionalProperties": {
                "type": "string"
            }
        },
        "KeyVals": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/KeyValue"
            }
        },
        "Fill": {
            "type": "object",
            "properties": {
                "fill": {
                    "$ref": "#/$defs/KeyVals"
                }
            },
            "required": [
                "fill"
            ],
            "additionalProperties": false
        },
        "Select": {
            "type": "object",
            "properties": {
                "select": {
                    "$ref": "#/$defs/KeyVals"
                }
            },
            "required": [
                "select"
            ],
            "additionalProperties": false
        },
        "File": {
            "type": "object",
            "properties": {
                "file": {
                    "$ref": "#/$defs/KeyVals"
                }
            },
            "required": [
                "file"
            ],
            "additionalProperties": false
        },
        "Step": {
            "oneOf": [
                {
                    "$ref": "#/$defs/Say"
                },
                {
                    "$ref": "#/$defs/Fill"
                },
                {
                    "$ref": "#/$defs/Click"
                },
                {
                    "$ref": "#/$defs/Highlight"
                },
                {
                    "$ref": "#/$defs/Select"
                },
                {
                    "$ref": "#/$defs/File"
                }
            ]
        },
        "SceneItem": {
            "type": "object",
            "properties": {
                "scene": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Step"
                    }
                }
            },
            "required": [
                "scene"
            ],
            "additionalProperties": false
        }
    }
}